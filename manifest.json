{
  "name": "Close Whatsapp Chat",
  "version": "1.0",
  "description": "Allows you to close a chat on Whatsapp Web and return to the main screen that is shown with the app first load.",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/"
      ],
      "js": [
        "jquery-3.5.1.min.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "images/close_wpp16.png",
    "32": "images/close_wpp32.png",
    "48": "images/close_wpp48.png",
    "128": "images/close_wpp128.png"
  }
}